<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              style="@style/RalletsAlertDialog"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/border_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:id="@+id/description"
                  android:textColor="@color/white"
                  android:textStyle="normal|bold"
                  android:layout_marginTop="20dp"
                  android:textSize="18sp" />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="20dp"
                  android:id="@+id/price" android:textStyle="normal|bold" android:textSize="24sp"/>
    </LinearLayout>

    <Button android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableStart="@drawable/alipay"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/primary_500"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/alipay"
            android:id="@+id/alipayButton"
            style="@style/Widget.AppCompat.Button.Colored" />

    <Button android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableStart="@drawable/wechat"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/primary_500"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/wechat"
            android:id="@+id/wechatButton"
            style="@style/Widget.AppCompat.Button.Colored" />
</LinearLayout>